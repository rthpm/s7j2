<div class="cell">
  <fieldset class="fieldset"><legend class="alert">Event creation</legend>
    <%= form_tag url_for(action: 'create'), method: "POST" do %>
    <%= label_tag nil do %><%= label_tag "Title" %>
      <%= text_field_tag 'title' %>
    <% end %>

    <%= label_tag nil do %><%= label_tag "Description" %>
      <%= text_area_tag 'description', nil, :rows => "5" %>
    <% end %>

    <%= label_tag nil do %><%= label_tag "Location" %>
      <%= text_field_tag 'location' %>
    <% end %>

    <%= label_tag nil do %><%= label_tag "Starting date" %>
      <div class="input-group">
        <%= select_datetime Date.today, prefix: :start_date, datetime_separator: '', time_separator: '', :class => "input-group-field" %>
      </div>
    <% end %>

    <%= label_tag nil do %><%= label_tag "Duration" %>
      <%= text_field_tag 'duration', nil, :placeholder => 'A multiple of 5 (i.e. "45")' %>
    <% end %>

    <%= label_tag nil do %><%= label_tag "Price (eurobucks)" %>
      <%= number_field_tag 'price', min: 1, max: 4, :step => 1 %>
    <% end %>

    <%= submit_tag "Create Event", class: 'button' %>
  <% end %>
</div>


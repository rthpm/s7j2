
<div class="cell">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <fieldset class="fieldset"><legend class="alert">Sign up</legend>
      <%= f.label nil do %><%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
      <% end %>
  
      <%= f.label nil do %><%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password"%>
        <% end %>
    <% if @minimum_password_length %>
      <p class="help-text" id="passwordHelpText">Your password must have at least <%= @minimum_password_length %> characters minimum.</p>
    <% end %>
  
      <%= f.label nil do %><%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <% end %>
  
       <%= f.submit "Sign up", :class => "button" %>
  <% end %>
  </fieldset>
</div>

